{
  "name": "webhook-deployer",
  "version": "1.0.0",
  "description": "Automated webhook listener for Git deployment",
  "main": "server.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "concurrently \"nodemon server/index.js\" \"yarn build:watch\"",
    "dev:old": "nodemon server.js",
    "listener": "node scripts/listener.js",
    "self-deploy": "node scripts/self-deploy.js",
    "setup-nginx": "sudo node scripts/setup-nginx.js",
    "repo": "node scripts/add-repo.js",
    "domain": "node scripts/add-domain.js",
    "mock": "node scripts/mock.js",
    "build:ts": "tsc",
    "build:scss": "sass src/scss:public/css",
    "build": "yarn build:ts && yarn build:scss",
    "build:watch": "concurrently \"tsc --watch\" \"sass --watch src/scss:public/css\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "webhook",
    "deployment",
    "github",
    "gitlab",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.2.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/static": "^8.3.0",
    "bcryptjs": "^3.0.3",
    "body-parser": "^1.20.2",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "fastify": "^5.6.2",
    "fastify-socket.io": "^5.1.0",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.0.2",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "concurrently": "^9.2.1",
    "nodemon": "^3.0.1",
    "sass": "^1.97.1",
    "typescript": "^5.9.3"
  }
}
